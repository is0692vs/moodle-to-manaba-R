{
  "manifest_version": 3,
  "name": "Moodle to manaba Timetable",
  "version": "0.1.1",
  "description": "Moodleのコースリストをmanabaスタイルの時間割表示に変換します",
  "permissions": ["storage"],
  "host_permissions": [
    "*://*moodle*/*",
    "*://*manaba*/*",
    "*://*/moodle/*",
    "*://*/my/*",
    "http://localhost:*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*moodle*/my/*",
        "*://*moodle*/my",
        "*://*/moodle/my/*",
        "*://*/moodle/my",
        "*://*/my/*", 
        "*://*/my",
        "http://localhost:*/*"
      ],
      "js": ["src/parser.js", "src/tableGenerator.js", "src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
