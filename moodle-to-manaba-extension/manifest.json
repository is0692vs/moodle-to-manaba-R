{
  "manifest_version": 3,
  "name": "Moodle to manaba Timetable",
  "version": "0.2.0",
  "description": "Moodleのコースリストをmanabaスタイルの時間割表示に変換します",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://*/*", "http://localhost:*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*/my/*", "https://*/my", "http://localhost:*/*"],
      "js": ["src/parser.js", "src/tableGenerator.js", "src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
