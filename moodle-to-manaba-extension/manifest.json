{
  "manifest_version": 3,
  "name": "Moodle to manaba Timetable",
  "version": "0.1.1",
  "description": "Moodleのコースリストをmanabaスタイルの時間割表示に変換します",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://*/*",
    "http://localhost:*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/my/*",
        "https://*/my",
        "http://localhost:*/*"
      ],
      "js": ["src/parser.js", "src/tableGenerator.js", "src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
